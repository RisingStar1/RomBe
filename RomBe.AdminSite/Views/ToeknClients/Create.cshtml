@model RomBe.Entities.Client

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Client</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Id, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Id)
                @Html.ValidationMessageFor(model => model.Id)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Secret, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Secret)
                @Html.ValidationMessageFor(model => model.Secret)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Name, new { @class = "control-label col-md-2" })*@
            @Html.Label("Client name", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name)
                @Html.ValidationMessageFor(model => model.Name)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ApplicationType, new { @class = "control-label col-md-2" })

            <div class="col-md-10">
                @Html.DropDownListFor(p => p.ApplicationType, (SelectList)ViewBag.applicationTypeId, String.Empty)
                @Html.ValidationMessageFor(model => model.ApplicationType)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Active, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(p => p.Active, (SelectList)ViewBag.activeId, String.Empty)
                @Html.ValidationMessageFor(model => model.Active)
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.RefreshTokenLifeTime, new { @class = "control-label col-md-2" })*@
            @Html.Label("RefreshTokenLifeTime (In Days)", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RefreshTokenLifeTime)
                @Html.ValidationMessageFor(model => model.RefreshTokenLifeTime)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AllowedOrigin, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AllowedOrigin)
                @Html.ValidationMessageFor(model => model.AllowedOrigin)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
